{
  "name": "event-seating",
  "private": true,
  "version": "1.0.0",
  "description": "Event seating management system",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "yarn workspaces foreach --all --parallel run dev",
    "build": "yarn workspaces foreach --all run build",
    "test": "yarn workspaces foreach --all run test",
    "test:watch": "yarn workspaces foreach --all --parallel run test:watch",
    "test:coverage": "yarn workspaces foreach --all run test --coverage",
    "lint": "yarn workspaces foreach --all run lint",
    "start": "node dist/apps/api/src/index.js",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@4.9.1",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3",
    "nodemon": "^3.1.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
